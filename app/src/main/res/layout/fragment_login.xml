<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="190dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/ic_login_bro" />

        <EditText
            android:id="@+id/edtUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@android:color/darker_gray"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:ems="10"
            android:hint=" Correo"
            android:inputType="textEmailAddress"
            android:paddingLeft="5dp"
            android:drawableRight="@drawable/ic_baseline_visibility_24"/>

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@android:color/darker_gray"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
            android:ems="10"
            android:hint=" Contraseña"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:drawableRight="@drawable/ic_baseline_visibility_off_24"/>

        <Button
            android:id="@+id/btn_sesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="15dp"
            android:text="Iniciar Sesión"
            android:textColor="@color/secondaryTextColor"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/textOlvidar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="¿Olvidaste tu cantraseña?"
            android:textColor="@color/red_200"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/textRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Registrarse"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            />

    </LinearLayout>

</FrameLayout>